<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on wanderlust</h1><br>
    <div class="col-6 offset-3">
        <form action="/login" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input
                  type="text"
                  name="username"
                  class="form-control"
                  id="username"
                  required
                />
             
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input
                          type="password"
                          name="password"
                          class="form-control"
                          id="password"
                          required
                        />
                        </div>

                        <button class="btn btn-dark">Login</button>
        </form>
    </div>
</div>