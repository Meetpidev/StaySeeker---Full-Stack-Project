<% layout("/layouts/boilerplate.ejs") %>

<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h1 class="mt-3">Edit Your List</h1>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              type="text"
              name="listing[title]"
              placeholder="Enter title"
              class="form-control"
              value="<%= listing.title %>"
              required
            />
            <div class="valid-feedback">Valid Title!</div>
          </div>
  
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              type="text"
              name="listing[description]"
              placeholder="Enter Description"
              class="form-control"
              value="<%= listing.description %>"
              required
            ></textarea>
            <div class="valid-feedback">Enter The Description!</div>
          </div>
  
          <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input
              type="text"
              name="listing[image]"
              placeholder="Enter Image URL/LINK"
              class="form-control"
              value="<%= listing.image %>"
              required
            />
            <div class="valid-feedback">Enter The Immage(LINK)</div>
          </div>
  
          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="Price" class="form-label">Price</label>
              <input
                type="number"
                name="listing[price]"
                placeholder="Enter Price"
                class="form-control"
                value="<%= listing.price %>"
                required
              />
            
             <div class="valid-feedback">Enter The Country</div>
            
            </div>
  
            <div class="mb-3 col-md-8">
              <label for="country" class="form-label">Country</label>
              <input
                type="text"
                name="listing[country]"
                placeholder="Enter Country"
                class="form-control"
                value="<%= listing.country %>"
                required
              />
              <div class="valid-feedback">Enter The Country</div>
            </div>
          </div>
  
          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              name="listing[location]"
              placeholder="Enter Location"
              class="form-control"
              value="<%= listing.location %>"
              required
            />
            <div class="valid-feedback">Enter The Location</div>
          </div>
  
          <button class="btn btn-dark btn-dark add-btn mt-3">Edit</button>
  
          <br /><br />
    </form>
    </div>
    </div>
</body>